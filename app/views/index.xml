<Alloy>
	<NavigationWindow module="xp.ui">
		<Window title="Github Dashboard">
			<RightNavButton id="authButon" platform="ios" onClick="authorize" />
			<Menu platform="android">
				<MenuItem id="authButton" onClick="authorize" />
			</Menu>
			<ListView id="list" onItemclick="showOrganizationRepositories" />
			<ActivityIndicator id="loader" class="basicLoader" />
			<View id="landing">
				<View class="logo">
					<ImageView class="logo-image" />
					<Label class="logo-title" />
				</View>
				<View class="button" onClick="logIn">
					<Label class="button-title" />
					<ImageView class="button-arrow" />
				</View>
			</View>
		</Window>
	</NavigationWindow>
</Alloy>
